<% include ./partials/header %>
<h1><%=locals.user.username%>'s Posts</h1>
    <%blogs.forEach(function(blog){%>
        <% if(blog.author == locals.user._id ){%>
          <div class="blog-card">
            <div class="meta">
              <div class="photo" style="background-image: url(https://images.unsplash.com/photo-1559826182-8f80ffd900ff?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1534&q=80)"></div>
            </div>
            <div class="description">
              <h1> <%=blog.title%> </h1>
              <% if(typeof blog.body == 'undefined'){ %>
                  <p> no content</p>
              <% } else { %>
                  <p> <%- blog.body.substring(0,90) %>...</p>
      <%}%>
              <p class="read-more">
                <a href="/allBlogs/<%=blog._id%>">Read More</a>
              </p>
          </div>
          </div>
        <%}%>
    <%});%>


<% include ./partials/footer %>
