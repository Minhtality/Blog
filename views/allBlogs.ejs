<% include ./partials/header %>
  <% blogs.forEach(function(blog){ %>
    <div class="blog-card">
      <div class="meta">
        <div class="photo" style="background-image: url(https://storage.googleapis.com/chydlx/codepen/blog-cards/image-1.jpg)"></div>
        <ul class="details">
          <li class="author"><a href="#"><%=blog.author%></a></li>
          <li class="date">May 31, 2019</li>
        </ul>
      </div>
      <div class="description">
        <h1> <%=blog.title%> </h1>
        <h2> <%=blog.title%> </h2>

        <% if(typeof blog.body == 'undefined'){ %>
            <p> no content</p>
        <% } else { %>
            <p> <%- blog.body.substring(0,90) %>...</p>
<%}%>
        <p class="read-more">
          <a href="/allBlogs/<%=blog._id%>">Read More</a>
        </p>
    </div>
    </div>
  <%});%>


<% include ./partials/footer %>
